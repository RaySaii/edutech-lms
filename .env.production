# Production Environment Configuration
NODE_ENV=production

# Domain Configuration
DOMAIN_NAME=your-domain.com
API_URL=https://api.your-domain.com
FRONTEND_URL=https://your-domain.com
WS_URL=wss://ws.your-domain.com

# Database Configuration
DATABASE_URL=postgresql://edutech_user:secure_password@postgres:5432/edutech_lms_prod
POSTGRES_DB=edutech_lms_prod
POSTGRES_USER=edutech_user
POSTGRES_PASSWORD=secure_password_change_in_production

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=redis_secure_password_change_in_production

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secure_jwt_access_secret_256_chars_minimum_change_in_production
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_256_chars_minimum_change_in_production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com
SESSION_SECRET=your_session_secret_change_in_production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-app@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@your-domain.com

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=edutech-lms-storage

# CDN Configuration
CDN_URL=https://cdn.your-domain.com

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password
PROMETHEUS_RETENTION_TIME=30d

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_REQUEST_SIZE=10mb

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Third-party Integrations
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID
MIXPANEL_TOKEN=your_mixpanel_token
ENABLE_ANALYTICS=true

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_VIDEO_STREAMING=true
ENABLE_PAYMENT_PROCESSING=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=edutech-lms-backups

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Content Security
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,mp4,mp3,jpg,jpeg,png,gif
MAX_FILE_SIZE=100mb
ENABLE_VIRUS_SCANNING=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Memory and Performance
NODE_OPTIONS=--max-old-space-size=2048
WORKERS=2
CLUSTER_MODE=true